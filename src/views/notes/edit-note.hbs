<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="PUT" />
        <div class="mb-3">
          <label for="title">Title:</label>
          <input
            type="text"
            name="title"
            class="form-control"
            value="{{note.title}}"
          />
        </div>
        <div class="mb-3">
          <label for="description">Description:</label>
          <textarea
            name="description"
            class="form-control"
          >{{note.description}}</textarea>
        </div>
        <div class="mb-3">
          <label for="file">Attach File:</label>
          <input
            type="file"
            name="file"
            class="form-control"
          />
        </div>
        {{#if note.fileUrl}}
        <div class="mb-3">
          <p>Current attachment: <a href="/notes/file/{{note.id}}">View</a></p>
        </div>
        {{/if}}
        <button class="btn btn-primary w-100" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>
