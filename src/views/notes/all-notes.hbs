<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }}</p>
        {{#if fileUrl}}
        <p><a href="/notes/file/{{id}}" class="btn btn-info btn-sm">View Attachment</a></p>
        {{/if}}
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{../user.name}}</h1>
      <p class="lead">There are no notes yet.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>
